<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.groute.mapper.AccountMapper">
    <insert id="insertAccount" parameterType="Account">
        insert into account(spentMoney, description, category, userplan_id, type, day, cateimg)
        values(#{spentMoney}, #{description}, #{category}, #{userPlanId}, #{type}, #{day}, #{cateImg})
    </insert>

    <resultMap id="AccountDTO" type="Account">
        <result column="userplan_id" property="userPlanId"></result>
    </resultMap>
    <select id="selectAccount" parameterType="int" resultMap="AccountDTO">
        select * from account
        where id = #{id}
    </select>

    <select id="selectAllAccount"  resultMap="AccountDTO">
        select * from account
    </select>

    <delete id="deleteAccount" parameterType="int">
        delete from account
        where id = #{id}
    </delete>

    <update id="updateAccount" parameterType="Account">
        update account
        set spentMoney = #{spentMoney}, description = #{description}, category = #{category}, type = #{type }, day = #{day}, cateimg = #{cateImg}
        where id = #{id}
    </update>

    <delete id="deleteAllAccountByRId" parameterType="int">
        delete from account
        where routes_id = #{routesId}
    </delete>

    <select id="selectByUserPlanId" parameterType="int" resultMap="AccountDTO">
        select * from account
        where userplan_id = #{userPlanId}
    </select>

    <delete id="deleteByUserPlanId" parameterType="int">
        delete from account
        where userplan_id = #{userPlanId}
    </delete>
</mapper>