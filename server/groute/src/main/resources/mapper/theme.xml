<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.groute.mapper.ThemeMapper">
    <insert id="insertTheme" parameterType="String">
        insert into theme(name)
        values(#{name})
    </insert>

    <select id="selectTheme" parameterType="String" resultType="Theme">
        select * from theme
        where name = #{name}
        limit 1
    </select>

    <select id="selectAllTheme"  resultType="Theme">
        select * from theme
    </select>

    <delete id="deleteTheme" parameterType="int">
        delete from theme
        where id = #{id}
    </delete>

    <update id="updateTheme" parameterType="Theme">
        update theme
        set name = #{name}
        where id = #{id}
    </update>
</mapper>