<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.groute.mapper.UserMapper">
    <insert id="registerUser">
        insert into user(id, password, email, phone, birth)
        values(#{user.id}, #{user.password}, #{user.email}, #{user.phone}, #{user.birth})
    </insert>

    <select id="findById" resultType="com.ssafy.groute.dto.UserDTO">
        select * from user
        where id = #{userId}
    </select>
</mapper>