<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="20dp"
    android:paddingHorizontal="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeColor="#f2f2f2"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_board_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_board_profile_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/item_board_uid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ponyo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/item_board_profile_iv"
                app:layout_constraintBottom_toBottomOf="@id/item_board_profile_iv"
                app:layout_constraintLeft_toRightOf="@id/item_board_profile_iv"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_board_theme_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_board_uid_tv"
                app:layout_constraintBottom_toBottomOf="@id/item_board_uid_tv"
                app:layout_constraintLeft_toRightOf="@id/item_board_uid_tv"
                android:layout_marginStart="20dp" />

            <ImageView
                android:id="@+id/item_board_iv"
                android:layout_width="match_parent"
                android:layout_height="169.8dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_board_profile_iv"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/flower"
                />
                <TextView
                    android:id="@+id/item_board_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_board_iv"
                    android:text="유채꽃밭이 너무 아름다웠던 제주~!!!"/>

                <TextView
                    android:id="@+id/item_board_content_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:layout_marginHorizontal="30dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_board_title_tv"
                    android:text="제주도 성산유채꽃밭이 유명하다는 얘기를 듣고 다녀왔습니다. 너무 아름다웠고 나중에 기회가 된다면 또 가고싶네요! 연인과의 유채꽃밭 데이트 추천합니다ㅎㅎ"
                    />

            <ImageView
                android:id="@+id/item_board_review_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/comment"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_board_content_tv"
                />

            <TextView
                android:id="@+id/item_board_review_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:includeFontPadding="false"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/item_board_review_iv"
                app:layout_constraintBottom_toBottomOf="@id/item_board_review_iv"
                app:layout_constraintLeft_toRightOf="@id/item_board_review_iv"/>

            <ImageView
                android:id="@+id/item_board_like_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/like"
                android:layout_marginStart="30dp"
                android:backgroundTint="@color/black"
                app:layout_constraintTop_toTopOf="@id/item_board_review_num_tv"
                app:layout_constraintBottom_toBottomOf="@id/item_board_review_num_tv"
                app:layout_constraintLeft_toRightOf="@id/item_board_review_num_tv"
                />

            <TextView
                android:id="@+id/item_board_like_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56"
                android:includeFontPadding="false"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/item_board_like_iv"
                app:layout_constraintBottom_toBottomOf="@id/item_board_like_iv"
                app:layout_constraintLeft_toRightOf="@id/item_board_like_iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>